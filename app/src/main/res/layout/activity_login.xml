<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary"
    tools:context=".Activity.LoginActivity">

            <ImageView
                android:id="@+id/login_header_logo"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/login_logo"
                />

            <EditText
                android:id="@+id/et_login_username"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="@string/hint.username"
                android:textSize="18sp"
                android:layout_below="@+id/login_header_logo"
                android:layout_marginTop="36dp" />

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="@string/hint.password"
                android:textSize="18sp"
                android:inputType="textPassword"
                android:layout_below="@+id/et_login_username" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="@string/text.btn.login"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="26dp"
                android:layout_below="@+id/et_login_password" />

    <ImageButton
        android:id="@+id/btn_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_settings_black_24dp"
        android:background="@null"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        />


</RelativeLayout>
